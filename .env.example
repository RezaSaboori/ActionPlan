# .env.example - Environment variables for the application
# Copy this file to .env and fill in your actual values.

# Neo4j Configuration
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="your_neo4j_password"

# OpenAI-compatible API Configuration (Optional)
# If these are set, the OpenAI client will be used for summarization.
# Otherwise, it will fall back to the local Ollama instance.
GAPGPT_API_BASE="https://api.gapgpt.app/v1"
GAPGPT_API_KEY="sk-your_api_key_here"

# Ollama Configuration (Fallback)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="cogito:8b"
